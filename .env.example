# Bilan SDK Configuration
# Get your API key from the Bilan dashboard
NEXT_PUBLIC_BILAN_API_KEY=your_bilan_api_key_here

# Bilan server endpoint (optional, defaults to localhost:3002)
NEXT_PUBLIC_BILAN_ENDPOINT=http://localhost:3002

# Bilan mode: 'local' or 'server' (optional, defaults to 'local')
NEXT_PUBLIC_BILAN_MODE=local

# Development flags
NEXT_PUBLIC_DEBUG=true

# SECURITY: Token API Protection
# Secret token required for accessing the /api/bilan-token endpoint
# Generate a secure random string for production use
# This prevents unauthorized access to the Bilan API key
BILAN_TOKEN_API_SECRET=your_secure_secret_token_here

# Example secure token generation (use a tool like this):
# openssl rand -base64 32
# Or use a password manager to generate a 32+ character random string
